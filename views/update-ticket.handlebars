<div class="container">
  <div class="row main">
    <div class="main-center rounded">
      <form id="cms" method="post" action="#">

        <div class="form-group">
          <label for="category" class="cols-sm-2 control-label">Select Category</label>
          <div class="cols-sm-10">
            <div class="input-group">
              <select class="custom-select" id="category"></select>
            </div>
          </div>
        </div>

        <div class="form-group">
          <label for="ticket" class="cols-sm-2 control-label">Ticket</label>
          <div class="cols-sm-10">
            <div class="input-group">
              <textarea placeholder="Ticket Body" class="form-control" rows="10" id="ticket"></textarea>
            </div>
          </div>
        </div>

        <div class="form-group">
          <label for="status" class="cols-sm-2 control-label">Select Status</label>
          <div class="cols-sm-10">
            <div class="input-group">
              <select class="custom-select" id="status"></select>
            </div>
          </div>
        </div>

        <div class="form-group">
          <label for="user" class="cols-sm-2 control-label">Select User</label>
          <div class="cols-sm-10">
            <div class="input-group">
              <select class="custom-select" id="user"></select>
            </div>
          </div>
        </div>

        <div class="form-actions text-center">
          <button type="submit" class="btn btn-primary btn-lg update-button">Update</button>
        </div>
      </form>
    </div>
  </div>
</div>
